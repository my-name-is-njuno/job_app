<div class="album py-5 bg-light">
    <div class="container">

      <div class="row justify-content-center">
        <h3>
          HR Jobs 
        </h3>&nbsp&nbsp
        <br>
        
          <a href="" class="btn btn-primary">New</a> &nbsp
          <a href="" class="btn btn-secondary">Applied For</a>
        
      </div>
  <hr>
      <div class="row m-3">

            {{#if jobs}}

              {{#each jobs}}

            <div class="col-md-4">
              <div class="card mb-1 shadow-sm">
                <h5 class="p-2 m-0">
                  {{title}}
                  <span class="float-right">
                  {{#if apply}}
                      <button class="btn btn-success btn-sm">Applied</button>
                    {{else}}
                      {{#if seen}}
                        <button class="btn btn-info btn-sm">Seen</button>
                      {{else}}
                        <button class="btn btn-warning btn-sm">New</button>
                      {{/if}}

                    {{/if}}
                  </span>
                </h5>
                <hr class="m-0">
                <div class="card-body">

                  <p class="card-text">
                    <b>Ref: </b>{{ref}}.<br>
                    <b>Company: </b>{{company}}.<br>
                    <b>Apply Before: </b>{{closing_date}}.<br>
                    <b>Type: </b>{{type}}.<br>
                    <br>
                    <b>Added On : </b>{{created_at}}.<br><br>
                    <b><a href="{{website}}" target="_blank">Visit Website</a>.</b><br>                    
                    <b><a href="{{link}}" target="_blank">Advertised Here</a>.</b>
                      
                      <br>
                      <br>
                    <b>Emails: </b><br>
                    <span class="px-2 bg-secondary text-white">{{email}}</span>
                  </p>
                  <hr>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">

                      <a type="button" href="/na/{{id}}" class="btn btn-sm btn-outline-secondary">N/A</a>
                      <a type="button" href="/view/{{id}}" class="btn btn-sm btn-outline-primary">View</a>
                      <a type="button" href="/edit/{{id}}" class="btn btn-sm btn-outline-info">Edit</a>
                      {{!-- <a type="button" href="/appy/{{id}}" class="btn btn-sm btn-outline-success">Apply</a> --}}
                    </div>
                    <small class="text-muted">9 mins ago</small>
                  </div>

                </div>
                

              </div>
            </div>


          {{/each}}
       {{/if}}
          
      </div>
       
    </div>
  </div>